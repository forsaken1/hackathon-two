!!!
%html
  %head
    %title= yield :title
    = csrf_meta_tags
    = stylesheet_link_tag :application
    %script{:type => "text/javascript", :src => "//api-maps.yandex.ru/2.1/?lang=ru_RU"}
  %body
    .wrapper
      = render partial:'layouts/main_menu'
      .ui.eight.column.grid
        .column
        .twelve.wide.column
          .ui.breadcrumb
            = yield :breadcrumb
        .column
      = yield
      .footer-padding
  %footer
  = javascript_include_tag :application