<div class="ui three column grid">
  <div class="column"></div>
  <div class="column">
    <h2><%= t('register.title')%></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    	<div class="ui error form segment">
        <%= render 'devise/shared/error_messages' %>
    		<div class="field">
    	  	<label><%= t('register.email')%></label>
    			<div class="ui left labeled icon input">
    			  <%= f.email_field :email, autofocus: true, placeholder: t('register.email') %>
    		    <i class="user icon"></i>
    		    <div class="ui corner label">
    		      <i class="icon asterisk"></i>
    		    </div>
    			</div>
    		</div>

    		<div class="field">
          <label><%= t('register.password')%></label>
    			<div class="ui left labeled icon input">
    			  <%= f.password_field :password, autocomplete: "off", placeholder: t('register.password') %>
    		    <i class="lock icon"></i>
    		    <div class="ui corner label">
    		      <i class="icon asterisk"></i>
    		    </div>
    			</div>
    		</div>

    		<div class="field">
          <label><%= t('register.confirm_password')%></label>
    			<div class="ui left labeled icon input">
    			  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('register.confirm_password') %>
    		    <i class="lock icon"></i>
    		    <div class="ui corner label">
    		      <i class="icon asterisk"></i>
    		    </div>
    			</div>
    		</div>

    	  <%= f.submit t('register.submit'), class: 'ui blue submit button' %>

      </div>
    <% end %>
    <div class="ui bottom attached info message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="column"></div>
</div>