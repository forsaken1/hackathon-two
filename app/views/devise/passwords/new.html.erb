<div class="ui three column grid">
  <div class="column"></div>
  <div class="column">
    <h2><%= t('forgot_password.title')%></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    	<div class="ui error form segment">
        <%= render 'devise/shared/error_messages' %>
    		<div class="field">
    	  	<%= f.label :email,  t('forgot_password.email')%>
    			<div class="ui left labeled icon input">
    			  <%= f.email_field :email, autofocus: true, placeholder: t('forgot_password.email') %>
    		    <i class="user icon"></i>
    		    <div class="ui corner label">
    		      <i class="icon asterisk"></i>
    		    </div>
    			</div>
    		</div>

    	  <%= f.submit t('forgot_password.send_instruction'), class: 'ui blue submit button' %>

      </div>
    <% end %>
    <div class="ui bottom attached info message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="column"></div>
</div>